<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Coffee Contacts</title>
    <!-- Font links -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,900&family=Satisfy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS links -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <button id="logoutBtn">Logout</button>
    </header>
    <h1 class="bold">Coffee Contacts</h1>

    <!-- Add person Button -- Modal popup with the form-->
    <!-- Form :
    Name
    email
    Date added
    company
    spark -->
    <div class="container">
      <% for(let i = 0; i < persons.length; i++) {%>
        <div class="mySlides fade">
          <div class="numbertext"><%=i+1%> / <%=persons.length%></div>
            <section class="cards slides-container">
              <h3 class="text name"><span class="bold" style="text-decoration:underline;">Name:</span> <%=persons[i].name%></h3>
              <h3 class="text email"><span class="bold" style="text-decoration:underline;">Email:</span> <%=persons[i].email%></h3>
              <h3 class="text company"><span class="bold" style="text-decoration:underline;">Company:</span> <%=persons[i].company%></h3>
              <h3 class="text dateAdded"><span class="bold" style="text-decoration:underline;">Date Added:</span> <%=persons[i].dateAdded%></h3>
              <h3 class="text spark"><span class="bold" style="text-decoration:underline;">Spark:</span> <%=persons[i].spark%></h3>
              <div class="btn-container">
                <button class="update-btn" id="updateBtn" aria-label="Update" data-edit=<%= persons[i].contactId%>><i class="fa fa-pencil-square-o" aria-hidden="true" title="Update this card"></i></button>
                <button class="delete-btn" id="deleteBtn" aria-label="Delete" data-delete=<%= persons[i].contactId%>><i class="fa fa-trash" aria-hidden="true" title="Delete this card"></i></button>
              </div>
            </section>
        </div>
      <% } %>

      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <h2 class="bold"> Add a Person: </h2>
      <section class="form cards container">
        <form action="/persons" method="POST">
          <label for="name" class="bold">
            Name:
            <input type="text" name="name" placeholder="Name">
          </label>
          <label for="email" class="bold">
            Email:
            <input type="text" name="email" placeholder="Email">
          </label>
          <label for="company" class="bold">
            Company:
            <input type="text" name="company" placeholder="Company">
          </label>
          <label for="dateAdded" class="bold">
            Date Added:
            <input type="date" name="dateAdded">
          </label>
          <label for="spark" class="bold">
            Spark:
            <input type="text" name="spark" placeholder="Spark">
          </label>
          <button id="clickMe" type="submit">Add Person</button>
        </form>
      </section>

    <div class="modal-container hidden">
      <div class="modal" id="updateModal"></div>
    </div>
    <div class="modal-container hidden" id="logoutFormContainer">
      <div class="modal" id="logout">
        <form id="logoutForm">
          <h3>Are you sure you want to log out?</h3>
          <div class="user-btn-container">
            <button class="logout-yes-btn" id="logoutYesBtn">Yes</button>
            <button class="logout-no-btn" id="logoutNoBtn">No</button>
          </div>
        </form>
      </div>
    </div>
    <br>
    <script src="/js/main.js"></script>
  </body>
</html>
